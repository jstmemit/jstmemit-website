---
import { Badge } from "@/components/ui/badge"

import englishMemes from "@/assets/images/english_memes.webp"
import algorithm from "@/assets/icons/algorithm.svg"
import userimages from "@/assets/icons/userimages.svg"

import { Image } from "astro:assets"
import Advantage from "../components/Advantage.astro";

const content = {
    advantages: [
        {
            title: "Algorithm",
            description: "Thumbs up good memes, thumbs down cringe to train the bot on your channel’s humour",
            icon: algorithm
        },
        {
            title: "Your images",
            description: "That cursed screenshot from your game? Perfect meme material",
            icon: userimages
        }
    ]
}

const { advantages } = content;
---

<section class="flex flex-col md:flex-row items-center gap-8 md:gap-16 md:mt-20">
    <div class="w-[100%] md:w-[60%] order-1 md:order-0">
        <Image class="select-none pointer-events-none" src={englishMemes} alt="Settings command menu" />
    </div>
    <div class="flex flex-col gap-4">
        <h2 class="text-3xl md:text-5xl font-bold">IT JUST DOESN’T <br>GET <span class="text-magenta-500">OLD</span></h2>
        <p class="text-gray-paragraph text-xl leading-9">
            <span>Discussing an event? Get ready to see memes about it immediately</span>
        </p>
        <ul class="flex flex-col gap-5">
            {
                advantages.map((advantage) => (
                        <Advantage image={advantage.icon} title={advantage.title} description={advantage.description} />
                ))
            }
        </ul>
    </div>
</section>