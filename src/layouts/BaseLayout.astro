---
import "../styles/global.css"
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

const seo = {
    title: "Just Meme It | A Discord bot that generates memes",
    description: "Just Meme It is a Discord bot that makes memes about whatever you're chatting about. Get good memes about your server's inside jokes and conversations.",
    image: "https://jstmemit.com/assets/logo.png",
    url: Astro.url
}

const jsonLd = {
    "@context": "https://schema.org",
    "@type": "SoftwareApplication",
    name: "Just Meme It",
    description: seo.description,
    applicationCategory: "EntertainmentApplication",
    operatingSystem: "Cross-platform",
    url: seo.url,
    image: seo.image,
    offers: {
        "@type": "Offer",
        price: "0",
        priceCurrency: "USD",
    },
};
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="generator" content={Astro.generator} />
        <meta name="robots" content="index, follow" />
        <meta name="description" content={seo.description} />

        <meta property="og:title" content={seo.title} />
        <meta property="og:type" content="website" />
        <meta property="og:url" content={seo.url} />
        <meta property="og:image" content={seo.image} />

        <meta name="twitter:card" content="summary_large_image">
        <meta property="twitter:domain" content="jstmemit.com">
        <meta property="twitter:url" content={seo.url}>
        <meta name="twitter:title" content={seo.title}>

        <title>{seo.title}</title>

        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
        <link rel="sitemap" href="/sitemap-index.xml" />
        <link rel="manifest" href="/site.webmanifest">

        <meta name="darkreader-lock">

        <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
    </head>
    <body>
        <header>
            <Navbar />
        </header>
        <main class="text-white">
            <slot />
        </main>
        <footer>
            <Footer />
        </footer>
    </body>
</html>
